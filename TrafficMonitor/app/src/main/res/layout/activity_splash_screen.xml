<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/splashImageViewTrafficLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            app:srcCompat="@drawable/green" />

        <TextView
            android:id="@+id/splashTextViewAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/bangers"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/FhGcolor"
            android:textSize="50dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/splashTextViewAppFunction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/antic"
            android:text="Get all traffic lights by Green ..."
            android:textSize="18dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <!--
            <TextView
                android:id="@+id/splashTextViewDev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developed by:"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/splashImageViewLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/fraunhofer_fokus_logo" />
                -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="3dp"
                android:text="@string/copyright"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>